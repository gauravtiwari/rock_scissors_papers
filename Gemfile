source 'https://rubygems.org'

#Core rails, database and server
gem 'rails', '4.2.4'
gem 'pg'
gem 'sprockets-rails'
gem 'arel'
gem 'passenger'

#JS VM and SASS
gem 'sass-rails', '~> 5.0'
gem 'uglifier', '>= 1.3.0'
gem 'coffee-rails'
gem 'jquery-rails'
gem 'jquery-turbolinks'
gem 'turbolinks', github: 'rails/turbolinks'

#Redis
gem 'redis'
gem 'redis-namespace'
gem 'hiredis'
gem 'connection_pool'
gem 'redis-objects'

#Authentication & authorization
gem 'devise'
gem 'devise_invitable'
gem 'pundit'

#Views/JSON
gem 'jbuilder'
gem 'react-rails'

#Realtime
gem 'pusher'
gem 'em-http-request'

group :development, :test do
  gem 'byebug'
end

group :development do
  gem 'web-console'
  gem 'spring'
end